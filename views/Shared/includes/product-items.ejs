<article class="product-item">
    <img src="<%= product.imageUrl %>" alt="<%=product.title  %>">
    <div class="product-item__content">
        <h2> <%=product.title  %> </h2>
        <div class="product-item__actions">
            <% if(locals.isAdmin) {%>
            <a class="btn btn-alt" href="/admin/products/<%= product.id %>" >View And Edit</a>
            <Button class="btn btn-alt" 
            data-productid="<%= product.id %>" 
            data-csrf="<%= locals.csrfToken %>">
            Delete
    </Button>
    <% }else{ %>
    <a class="btn btn-alt " href="/products/<%= product.id %>" >View Details</a>
    <% } %>
        </div>
    </div>
       
    </article>