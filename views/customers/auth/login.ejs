<%- include('../../Shared/includes/head' , {pageTitle : 'Login'})  %>
<link rel="stylesheet" href="/styles/auth.css">
<link rel="stylesheet" href="/styles/form.css">
</head>
<body>
    <%- include('../../Shared/includes/header') %>
<main>
    <h1>Login</h1>
    <% if (inputdata.errorMessage) { %>  <!-- ✅ Fix: Use correct error message key -->
        <section class="alert"> 
            <h2>invlaid credentials</h2>
            <p><%= inputdata.errorMessage %></p>  <!-- ✅ Fix: Use correct variable -->
        </section>
    <% } %>
<form method="post" action="/login">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">



<p>
    <label for="Email">Email</label>
    <input type="email" name="Email"  value="<%= inputdata.email  %>" id="Email" required>
</p>
<p>
    <label for="Password">Password</label>
    <input type="Password" name="Password" value="<%= inputdata.password %>"id="Password" required maxlength="10">
</p>

<Button class="btn" >Login </Button>
<p id="switch-form" ><a href="/signup">Sign uP</a></p>
</form>
</main>

<%- include('../../Shared/includes/footer') %>