<form action="<%= submitPath %>?_csuf=<%= locals.csrfToken %>" method="post" enctype="multipart/form-data">
        
    <p>
        <label for="title">Title</label>
        <input type="text" name="title" value="<%= product.title  %>" id="title" required>
    </p>
    <p>
        <label for="image">Upload Image</label>
        <input type="file" name="image" id="image" accept="image/*" <% if(imageRequired) {%> required <% } %>>   
    </p>

    <p>
        <label for="summary">Summary</label>
        <textarea name="summary" id="summary"  required maxlength="250"><%= product.summary  %></textarea>
    </p>

    <p>
        <label for="price">Price ($)</label>
        <input type="number" name="price" value="<%= product.price %>" id="price" step="0.01" min="0.01" required>
    </p>

    <p>
        <label for="description">Description</label>
        <textarea name="description" id="description" rows="7" required><%= product.description%></textarea>
    </p>

    <p>
        <button type="reset" class="btn btn-alt" >Reset</button>
        <button type="submit" class="btn">Save</button>
    </p>

</form>